{
  "name": "user",
  "version": "0.0.0",
  "description": "user service for ansopedia",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "lint": "eslint src",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "pretest": "pnpm build",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prod": "set NODE_ENV=production&& pnpm build && pnpm start",
    "start": "node ./build/index.js",
    "test": "jest"
  },
  "keywords": [
    "user",
    "ansopedia"
  ],
  "author": "ansopedia",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md}": [
      "prettier --write .",
      "eslint --fix ."
    ]
  }
}
